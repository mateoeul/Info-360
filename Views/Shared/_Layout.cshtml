@{
    // Obtener si el usuario está logueado y su ID
    var isUserLogged = Context.Session.GetString("user") != null;
    var userId = Context.Session.GetInt32("userId"); // ID del usuario logueado
}


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Uni</title>
    <link rel="icon" type="image/png" href="../favicon.png">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


</head>

<body class="layout">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <header>
        <nav> 
            <ul>
                
                <li> <a href='@Url.Action("Index", "Home")'> <img src="../../img/logo_uni_nav2.png" alt=""> </a> </li>

                 @if (isUserLogged)
                {
                    <li> 
                        <form asp-action="Busqueda" method="post" class="search-box">
                            <input id="buscador" type="text" name="dato" placeholder="Buscar..." autocomplete="off"/>
                            <button type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M10 2a8 8 0 1 0 5.33 14.73l5.65 5.64 1.41-1.41-5.64-5.65A8 8 0 0 0 10 2zm0 2a6 6 0 1 1 0 12 6 6 0 0 1 0-12z"/>
                                </svg>
                            </button>
                        </form>
                        <div class="resultados" id="resultados" style="position: absolute; background: white; z-index: 1000; width: 100%; border: 1px solid #ddd;"></div>
                    </li>
                    <li><a href='@Url.Action("ListaCarreras", "Home")'><button class="button">Carreras</button></a></li>
                    <li><a href='@Url.Action("Ayuda", "Home")'><button class="button">Ayuda</button></a></li>
                    <li><a href='@Url.Action("Test", "Home")'><button class="button">Test</button></a></li>
                    <li><a href='@Url.Action("Perfil", "Home", new { id = userId })'><img src="../../img/logo_usuario.png" alt=""></a></li>
                }
                else
                {
                <li> 
                    <form asp-action="Login" asp-controller="Auth" method="post" class="search-box">
                        <input type="text" name="dato" placeholder="Buscar..." autocomplete="off"/>
                        <button type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M10 2a8 8 0 1 0 5.33 14.73l5.65 5.64 1.41-1.41-5.64-5.65A8 8 0 0 0 10 2zm0 2a6 6 0 1 1 0 12 6 6 0 0 1 0-12z"/>
                            </svg>
                        </button>
                    </form>
                </li>
                    <li><a href='@Url.Action("Login", "Auth")'><button class="button">Carreras</button></a></li>
                    <li><a href='@Url.Action("Login", "Auth")'><button class="button">Ayuda</button></a></li>
                    <li><a href='@Url.Action("Login", "Auth")'><button class="button">Test</button></a></li>
                    <li><a href='@Url.Action("Login", "Auth")'> iniciar sesion</a></li>
                }
            </ul>
        </nav>
    </header>


    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="footer-container">

            <div class="logo-container">
                <img src="../../img/Logo_Uni.png" alt=""> 
            </div>

            <hr class="vertical-line">
            
            <div class="logos-container">
                <div class="texto-footer">
                    <p>Features</p>
                    <p>Home</p>
                    <p>Reels</p>
                </div>
                <div class="texto-footer">
                    <p>Privacy</p>
                    <p>FAQs</p>
                    <p>About</p>
                </div>
                <div class="texto-footer">
                    <p>Pricing</p>
                </div>

                <div class="logos">
                    <img src="../../img/instagram.png" alt="">
                    <img src="../../img/whatsapp.png" alt="">
                    <img src="../../img/x.png" alt="">
                    <img src="../../img/gmail.png" alt="">
                </div>
            </div>
            <pre>©2024 Uni. All rights reserved.</pre>
        </div>
    
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

    
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/buscador.js" asp-append-version="true"></script>

</html>
