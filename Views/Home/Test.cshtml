@{
    var totalSlides = 3; // Total de slides
    var preguntasPorSlide = 10; // Número de preguntas por slide
}

<form action="ResultadoTest" method="post" class="form-test">
    <section class="test-vocacional">
        <h2>Test Vocacional</h2>

        <section class="test">
            <div class="preguntas">
                <!-- Renderizamos las preguntas de forma dinámica -->
                @foreach (var slideIndex in Enumerable.Range(0, totalSlides))
                {
                    <div class="slide" id="slide-@slideIndex" style="display: @(slideIndex == 0 ? "block" : "none");">
                        <h3>Seleccioná las actividades de tu interés</h3>
                        @foreach (var pregunta in ViewBag.PreguntasDivididas[slideIndex])
                        {
                            <div class="opcion">
                                <input type="checkbox" id="opcion-@pregunta.Id" name="preguntasSeleccionadas" value="@pregunta.Id">
                                <label for="opcion-@pregunta.Id">¿@pregunta.Descripcion</label>
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="progreso">
                <button type="button" class="button boton-continuar" id="btnContinuar">Continuar</button>
                <!-- Eliminamos los circulitos, solo dejamos el contador de páginas -->
                <p id="pagina-actual">1 / @totalSlides</p>
            </div>
        </section>
    </section>
</form>


<script src="../js/slides.js"></script>