<section class="register-container">
    <div class="register-box">
        <h1>Registrar Usuario</h1>

        <form asp-action="Registro" method="post">

            <!-- Correo Electrónico -->
            <div class="form-group">
                <label for="mail">Correo Electrónico</label>
                <input type="email" id="mail" name="Mail" placeholder="Introduce tu correo electrónico" required />
            </div>
            
            <!-- Contraseña -->
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="Contraseña" placeholder="Introduce tu contraseña" required />
            </div>
            
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
</section>