@{
    ViewData["Title"] = "Registro de Estudiante";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="RegistroEst" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="estudiante.Nombre" placeholder="Introduce tu nombre" required />
    </div>
    
    <div class="form-group">
        <label for="apellido">Apellido</label>
        <input type="text" class="form-control" id="apellido" name="estudiante.Apellido" placeholder="Introduce tu apellido" required />
    </div>
    
    <div class="form-group">
        <label for="foto">Foto</label>
        <input type="file" class="form-control" id="foto" name="estudiante.Foto" />
    </div>
    
    <div class="form-group">
        <label for="fechaNac">Fecha de Nacimiento</label>
        <input type="date" class="form-control" id="fechaNac" name="estudiante.FechaNac" required />
    </div>
    
    <div class="form-group">
        <label for="bio">Biografía</label>
        <textarea class="form-control" id="bio" name="estudiante.Bio" rows="3"></textarea>
    </div>
    
    <div class="form-group">
        <label for="cursada">Año de Cursada</label>
        <input type="number" class="form-control" id="cursada" name="estudiante.Cursada" placeholder="Introduce tu año de cursada" required />
    </div>
    
    <h3>Detalles del Usuario</h3>
    
    <div class="form-group">
        <label for="email">Correo Electrónico</label>
        <input type="email" class="form-control" id="email" name="usuario.Mail" placeholder="Introduce tu correo electrónico" required />
    </div>
    
    <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" class="form-control" id="password" name="usuario.Contraseña" placeholder="Introduce tu contraseña" required />
    </div>
    
    <div class="form-group">
        <label for="tipo">Tipo de Usuario</label>
        <select class="form-control" id="tipo" name="usuario.Tipo" required>
            <option value="A">Administrador</option>
            <option value="E">Estudiante</option>
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

