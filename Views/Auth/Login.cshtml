<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<section class="login-container">
    <div class="login-box">
        <h1>Uni</h1>
        <h2>Iniciar sesión</h2>
        
        @if (ViewBag.Error != null)
        {
            <div class="error-message" style="color: red; margin-bottom: 10px;">
                @ViewBag.Error
            </div>
        }

        <form method="post" asp-action="VerificarLogin">
            <label for="email">Correo electrónico</label>
            <div class="form-group">
                <input type="email" id="email" name="email" class="form-control" required autocomplete="off"/>
            </div>

            <label for="password">Contraseña</label>
            <div class="input-group">
                <input type="password" id="password" name="password" class="form-control" required autocomplete="off"/>
                <span class="toggle-password" data-target="#password">
                    <i class="fa fa-eye"></i>
                </span>
            </div>

            <button class="google-btn">
                <img src="https://img.icons8.com/?size=512&id=17949&format=png" alt="Google Icon" class="icon" /> Continuar con Google
            </button>

            <button class="facebook-btn">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/cd/Facebook_logo_%28square%29.png" alt="Facebook Icon" class="icon" /> Continuar con Facebook
            </button>

            <div class="button-group">
                <a href='@Url.Action("RegistrarUsuario", "Home")' class="register-btn">Registrarse</a>
                <button type="submit" class="continue-btn">Iniciar sesión</button>
            </div>
        </form>

        <div class="ayuda">
            <h6><a href="#">¿Olvidaste tu contraseña?</a></h6>
        </div>
    </div>
</section>

<script src="../js/ojitos.js"></script>